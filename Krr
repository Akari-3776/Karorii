const goal = 1300;

function getValue(id) {
  return Number(document.getElementById(id).value) || 0;
}

function calculate() {
  const total =
    getValue("breakfast") +
    getValue("lunch") +
    getValue("dinner") +
    getValue("snack");

  const remaining = goal - total;

  document.getElementById("total").textContent = total;
  document.getElementById("remaining").textContent = remaining;

  const message = document.getElementById("message");

  if (remaining > 300) {
    message.textContent = "ã¾ã ä½™è£•ã‚ã‚‹ã‚ˆâ—";
  } else if (remaining > 0) {
    message.textContent = "ã‚ã¨å°‘ã—æ°—ã‚’ã¤ã‘ã‚ˆã†";
  } else {
    message.textContent = "ã‚ªãƒ¼ãƒãƒ¼ï¼æ˜æ—¥ã§èª¿æ•´ã—ã‚ˆã†";
  }
}
